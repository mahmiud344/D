      cursor: pointer;
      position: relative;
    }

    .group-card:hover {
      background: #f9f9f9;
    }

    .group-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .group-name {
      font-weight: bold;
      font-size: 18px;
    }

    .group-actions button {
      margin-left: 5px;
